{
  "containerDefinitions": [
    {
      "cpu": 1024,
      "essential": true,
      "image": "894393074014.dkr.ecr.us-east-1.amazonaws.com/mela/point-api",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": "true",
          "awslogs-group": "/ecs/point-api",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "memory": 2048,
      "memoryReservation": 1024,
      "name": "point-api-container",
      "portMappings": [
        {
          "appProtocol": "http",
          "containerPort": 8080,
          "hostPort": 8080,
          "name": "point-api",
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "DYNAMO_ENDPOINT",
          "value": "https://dynamodb.us-east-1.amazonaws.com"
        }
      ]
    },
    {
      "command": [
        "--config=/etc/ecs/ecs-cloudwatch.yaml"
      ],
      "cpu": 0,
      "essential": true,
      "image": "public.ecr.aws/aws-observability/aws-otel-collector:v0.36.0",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": "true",
          "awslogs-group": "/ecs/ecs-aws-otel-sidecar-collector",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "name": "aws-otel-collector"
    }
  ],
  "cpu": "1024",
  "taskRoleArn": "arn:aws:iam::894393074014:role/point-api-task-role",
  "executionRoleArn": "arn:aws:iam::894393074014:role/ecsTaskExecutionRole",
  "family": "point-api",
  "ipcMode": "",
  "memory": "3072",
  "networkMode": "awsvpc",
  "pidMode": "",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "tags": [
    {
      "key": "Project",
      "value": "mela"
    }
  ]
}
